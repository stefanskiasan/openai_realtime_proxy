FROM node:20-alpine

WORKDIR /app

# Install development tools
RUN apk add --no-cache python3 make g++ git curl

# Install nodemon and tsx globally for hot-reload
RUN npm install -g nodemon tsx

# Copy package files
COPY proxy/package*.json ./
COPY proxy/tsconfig.json ./

# Install all dependencies (including dev)
RUN npm install

# Create necessary directories
RUN mkdir -p /app/logs && mkdir -p /app/src

# Volume for source code (for hot-reload)
VOLUME ["/app/src"]

# Expose port and debugger port
EXPOSE 8080 9229

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Start with tsx for hot-reload and debugging
CMD ["tsx", "watch", "--inspect=0.0.0.0:9229", "src/server.ts"]